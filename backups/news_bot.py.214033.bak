                "pm_brief": call_agent(f"ì „ëµì  ì„œë¹„ìŠ¤ ê¸°íš ê´€ì  ë¸Œë¦¬í•‘:\n{ctx}", agents['PM']),
                "hr_proposal": call_agent(f"ì¡°ì§ ë° ì¸ì‚¬ ê´€ë¦¬ ì œì•ˆ:\n{ctx}", agents['HR']),
